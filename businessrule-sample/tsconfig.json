{
  "compilerOptions": {
    "outDir": "dist/modules",
    "rootDir": "src",
    "noEmit": false,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "target": "ES2022"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src/fluent"
  ],
}